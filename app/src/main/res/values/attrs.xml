<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabelTextView">

        <attr name="backgroundColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="numColor" format="color" />

        <attr name="text" format="string" />
        <attr name="num" format="string" />

        <attr name="numSize" format="dimension" />
        <attr name="textSize" format="dimension" />

        <attr name="labelTopPadding" format="dimension" />
        <attr name="labelCenterPadding" format="dimension" />
        <attr name="labelBottomPadding" format="dimension" />


        <attr name="numStyle">
            <enum name="normal" value="0" />
            <enum name="italic" value="1" />
            <enum name="bold" value="2" />
        </attr>

        <attr name="textStyle">
            <enum name="normal" value="0" />
            <enum name="italic" value="1" />
            <enum name="bold" value="2" />
        </attr>

        <attr name="direction">
            <enum name="leftTop" value="-45" />
            <enum name="rightTop" value="45" />
        </attr>

    </declare-styleable>


    <declare-styleable name="FamiliarRecyclerView">
        <attr name="frv_divider" format="reference|color" />
        <attr name="frv_dividerVertical" format="reference|color" />
        <attr name="frv_dividerHorizontal" format="reference|color" />
        <attr name="frv_dividerHeight" format="dimension" />
        <attr name="frv_dividerVerticalHeight" format="dimension" />
        <attr name="frv_dividerHorizontalHeight" format="dimension" />
        <attr name="frv_itemViewBothSidesMargin" format="dimension" />
        <attr name="frv_emptyView" format="reference" />
        <attr name="frv_isEmptyViewKeepShowHeadOrFooter" format="boolean" />
        <attr name="frv_layoutManager" format="enum">
            <enum name="linear" value="0" />
            <enum name="grid" value="1" />
            <enum name="staggeredGrid" value="2" />
        </attr>
        <attr name="frv_layoutManagerOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="frv_spanCount" format="integer" />
        <attr name="frv_isReverseLayout" format="boolean" />
        <attr name="frv_headerDividersEnabled" format="boolean" />
        <attr name="frv_footerDividersEnabled" format="boolean" />
    </declare-styleable>

    <!-- FLowLayout-->
    <declare-styleable name="FlowLayout">
        <attr name="android:gravity" />
    </declare-styleable>
    <declare-styleable name="FlowLayout_Layout">
        <attr name="android:layout_gravity" />
    </declare-styleable>


</resources>